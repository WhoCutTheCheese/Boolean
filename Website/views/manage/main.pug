head
	title= appName
	link(rel='stylesheet' href='/public/css/manage/manage.css')
	script(defer src='/public/js/manage/manage.js')

.container.server-info
	.server-avatar
		img(alt='Avatar', name='avatar-img', src=`${icon ? `https://cdn.discordapp.com/icons/${id}/${icon}.webp?size=128` : "/public/img/placeholder.png"}` style=`border-radius: 50%; border: 3px solid #3d566e;`)
	.server-details
		h3.is-white.user-name.title.is-2(href='/')=name

main
	.columns.is-multiline
		.column.is-full
			.box.match-background
				h3.title.is-3.is-white Server Info
				p.is-inline-block(style='color: gray;') Members:
				p.is-inline-block(style='color: white; margin-left: 2px;')=server.members.length
				

