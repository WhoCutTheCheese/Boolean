doctype html

include all.pug

head
	title= appName
	link(rel='stylesheet' href='/public/css/dashboard.css')

//- chatgpt school account
.container.user
	.user-avatar(href='/')
		.lazyload-wrapper
			img(alt='Avatar', name='avatar-img', src=`https://cdn.discordapp.com/avatars/${discordId}/${avatar}.webp?size=128`)
	.user-details
		h3.user-name.title.is-4(href='/')=username
			span.discriminator.has-text-primary= `#${tag}`
		h5.subtitle.has-text-grey.is-5 0 premium servers
.container.servers
	.top-text
		h1.server-text Select server to manage
	.server-grid
		each guild in Guilds
			.server
				.server-info 
					p= guild.name
				.server-icon
					img(alt='ServerName' name='server-img' src=`https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.webp?size=128` style="border-radius: 50%;")
				.server-button 
					if !guild.isManager
						button.button.is-danger Manage
					else
						button.button.is-success Invite

include footer.pug